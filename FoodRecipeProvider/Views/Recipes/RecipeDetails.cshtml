@model Recipe

<div class="container my-5 border-5">
    <h1 class="display-4">@Model.label</h1>


        <div class="col-lg-6">
            <img src="@Model.image" alt="Recipe Image" class="img-fluid mb-4" loading="lazy">
        </div>

        <div class="col-lg-6">
            <div class="mb-4">
                <h2>Ingredients</h2>
                <ul class="list-group">
                    @foreach (var ingredient in Model.ingredients)
                    {
                        <li class="list-group-item">@ingredient.text</li>
                    }
                </ul>
            </div>

            <div>
                <h2>Instructions</h2>
                <ol class="list-group">
                    @foreach (var instruction in Model.instructionLines)
                    {
                        <li class="list-group-item">@instruction</li>
                    }
                </ol>
            </div>

    </div>
</div>
