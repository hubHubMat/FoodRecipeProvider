@page
@model SelectDietLabelsModel

<form id="select-diet-labels-form" method="post">
    <h2>Select Your favorite diet labels</h2>

    @for (var i = 0; i < Model.AvailableDietLabels.Count; i++)
    {
        <div class="checkbox-element">
            <input class="form-check-input" type="checkbox" name="SelectedDietLabelIds" value="@Model.AvailableDietLabels[i].Id"
            @(Model.SelectedDietLabelIds != null && Model.SelectedDietLabelIds.Contains(Model.AvailableDietLabels[i].Id) ? "checked" : "") />
            <label class="form-check-label">@Model.AvailableDietLabels[i].Name</label>
        </div>
    }

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>
