@page
@model SelectDietLabelsModel
@{
}
<form id="select-Diet-labels-form" method="post">
    <h2>Select Your favorite diet labels</h2>

    @foreach (var dietLabel in Model.AvailableDietLabels)
    {
        <div class="checkbox-element">
            <input class="form-check-input" type="checkbox" name="SelectedDietLabels" value="@dietLabel" />
            <label class="form-check-label">@dietLabel</label>
        </div>
    }

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>
