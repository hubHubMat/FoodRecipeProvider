@page
@model SelectCuisineTypesModel

<form id="select-cuisine-types-form" method="post">
    <h4>Select your favorite cuisine types</h4>

    @for (var i = 0; i < Model.AvailableCuisineTypes.Count; i++)
    {
        <div class="form-check checkbox-element">
            <input class="form-check-input" type="checkbox" name="SelectedCuisineTypeIds" value="@Model.AvailableCuisineTypes[i].Id"
            @(Model.SelectedCuisineTypeIds != null && Model.SelectedCuisineTypeIds.Contains(Model.AvailableCuisineTypes[i].Id) ? "checked" : "") />
            <label class="form-check-label">@Model.AvailableCuisineTypes[i].Name</label>
        </div>
    }

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>
